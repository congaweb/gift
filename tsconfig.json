{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "noEmit": true,
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
